base: &base
  adapter: mysql2
  encoding: utf8
  reconnect: true
  pool: 50
  username: <%= "#{Capistrano::CLI.ui.ask("Enter MYSQL database username: ")}" %>
  password: <%= "#{Capistrano::CLI.ui.ask("Enter MySQL database password: ")}" %>
  socket: /var/run/mysqld/mysqld.sock

development:
  database: fraefel-demo_development<%= if ENV['deploy'] != 'production' then "_staging" end %>
  <<: *base

test:
  database: fraefel-demo_test<%= if ENV['deploy'] != 'production' then "_staging" end %>
  <<: *base

production:
  database: fraefel-demo_production<%= if ENV['deploy'] != 'production' then "_staging" end %>
  <<: *base
