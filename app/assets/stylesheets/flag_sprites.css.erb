[class^="flag-"],
[class*=" flag-"] {
  display: inline-block;
  width: 24px;
  height: 14px;
  *margin-right: .3em;
  line-height: 14px;
  vertical-align: text-top;
  background-image: url(<%= asset_path 'flag_sprites.png' %>);
  background-repeat: no-repeat;
}

[class^="flag-"]:last-child,
[class*=" flag-"]:last-child {
  *margin-left: 0;
}

.flag-austria {
  background-position: -52px 0px;
}

.flag-france {
  background-position: -78px 0px;
}

.flag-germany {
  background-position: -130px 0px;
}

.flag-italy {
  background-position: -104px 0px;
}

.flag-spain {
  background-position: -26px 0px;
}

.flag-switzerland {
  background-position: 0px 0px;
}

.btn-large [class^="flag-"] {
  margin-top: 1px;
}
.btn-small [class^="flag-"] {
  margin-top: -1px;
}
