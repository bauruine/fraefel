<header class="resource_header margin_bottom_big clearfix">
  <h1 class="floatLeft">Dashboard</h1>
</header>


<section class="filter_box">
  <header class="filter_box_header clearfix">
    <h4 class="floatLeft m-r_5px">Infos VK-Aufträge</h4>
  </header>
  <section class="filter_box_content clearfix">
    <ul class="ul_summary">
      <li class="summary clearfix">
        <p class="floatLeft bold title">Offen:</p>
        <p class="floatLeft"><%= @open_purchase_orders.count %></p>
      </li>
      <li class="summary clearfix">
        <p class="floatLeft bold title">Überfällig:</p>
        <p class="floatLeft"><%= @bad_purchase_orders.count %></p>
      </li>
      <li class="summary clearfix">
        <p class="floatLeft bold title">Versendet:</p>
        <p class="floatLeft"><%= @delivered_purchase_orders.count %></p>
      </li>
    </ul>
  </section>
</section>

<section class="filter_box">
  <header class="filter_box_header clearfix">
    <h4 class="floatLeft m-r_5px">Infos Inventar</h4>
  </header>
  <section class="filter_box_content clearfix">
    <ul class="ul_summary">
      <li class="summary clearfix">
        <p class="floatLeft bold title">Gruppen anz.:</p>
        <p class="floatLeft"><%= @article_rack_group_number_total %></p>
      </li>
      <li class="summary clearfix">
        <p class="floatLeft bold title">Erledigt:</p>
        <p class="floatLeft"><%= 0 %></p>
      </li>
      <li class="summary clearfix">
        <p class="floatLeft bold title">Offen:</p>
        <p class="floatLeft"><%= @open_articles %></p>
      </li>
    </ul>
  </section>
</section>