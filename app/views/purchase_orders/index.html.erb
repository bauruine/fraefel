<% content_for :breadcrumb do %>
  <ul class="breadcrumb">
    <li class="active">VK-Aufträge</li>
    <li class="pull-right">
      <%= link_to(params.merge(:format => :pdf), :class => "btn btn-mini btn-primary") do %>
        <i class="icon-print"></i> Drucke PDF
      <% end %>
      <%= link_to("#filter", :class => "btn btn-mini", :data => {:toggle => 'modal'}) do %>
        <i class="icon-filter"></i> Filter
      <% end %>
      <%= link_to("#goto", :class => "btn btn-mini", :data => {:toggle => 'modal'}) do %>
        <i class="icon-search"></i> Gehe zu
      <% end %>
    </li>
  </ul>
<% end %>

<div class="modal hide fade" id="index_purchase_positions">
</div>
<%= render("purchase_orders/partials/index/modal/filter") %>
<%= render("purchase_orders/partials/index/modal/goto") %>

<div class="page-header">
    <h1>VK-Aufträge</h1>
</div>

<div class="btn-toolbar pull-right">
  <div class="btn-group">
    <span class="btn btn disabled">VK-Pos</span>
    <span class="btn btn-primary disabled">Produziert</span>
    <span class="btn disabled"><%= @production_status_count %></span>
  </div>
  <div class="btn-group">
    <span class="btn btn disabled">VK-Pos</span>
    <span class="btn btn-success disabled">Eingelagert</span>
    <span class="btn disabled"><%= @stock_status_count %></span>
  </div>
  <div class="btn-group">
    <span class="btn btn disabled">VK-Pos</span>
    <span class="btn btn-danger disabled">Offen</span>
    <span class="btn disabled"><%= @pending_status_count %></span>
  </div>
</div>
<div class="clear"></div>

<blockquote>
  <p>
    <i class="icon-asterisk"></i> VK-Auftrag mit aktiver Terminverschiebung
  </p>
  <p>
    <i class="icon-fire"></i> Verschobener VK-Auftrag
  </p>
</blockquote>

<div class="row-fluid">
  <div class="span12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>VK-Auftrag</th>
          <th>Positionen</th>
          <th>Gebuchte Paletten</th>
          <th>Handelspartner</th>
          <th>Tour</th>
          <th>Gebiet</th>
          <th>Versand</th>
        </tr>
      </thead>
      <tbody>
        <%= render @purchase_orders %>
      </tbody>
      <tfoot>
      </tfoot>
    </table>
  </div>
</div>
