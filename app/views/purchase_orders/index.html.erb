<header class="resource_header margin_bottom_big clearfix">
  <h1 class="floatLeft">Verkaufs Aufträge</h1>
</header>

<section class="filter_box">
  <header class="filter_box_header clearfix">
    <h4 class="floatLeft">VK-Aufträge</h4>
    <% if permitted_to? :destroy_multiple, :purchase_orders %>
      <a rel="nofollow" data-method="delete" data-show-tooltip="true" class="header_link" href="/purchase_orders/destroy_multiple" title="Lösche VK ohne Palettenzuweisung">
        <span class="header_pack _9"></span>
      </a>
    <% end %>
    <a data-show-tooltip="true" data-role="tab" data-warp="goto" class="header_link" href="/purchase_orders?data_role=search" title="Springe zu VK-Auftrag...">
      <span class="header_pack _14"></span>
    </a>
    <a data-show-tooltip="true" data-role="tab" data-warp="filter" class="header_link" href="/purchase_orders?data_role=search" title="Zeige Filter-Optionen">
      <span class="header_pack _283"></span>
    </a>
    <a href="<%= url_for(params.merge(:format => :pdf)) %>" class="header_link" data-show-tooltip="true" title="Drucke Spediliste">
      <span class="header_pack _193"></span>
    </a>
  </header>
  <section class="filter_box_content clearfix">
    <table class="table">
      <thead>
        <tr>
          <th>VK-Auftrag</th>
          <th>Positionen</th>
          <th>Gebuchte Paletten</th>
          <th>Handelspartner</th>
          <th>Tour</th>
          <th>Gebiet</th>
          <th>Versand</th>
        </tr>
      </thead>
      <tbody>
        <%= render @purchase_orders %>
      </tbody>
      <tfoot>
      </tfoot>
    </table>
  </section>
</section>

<div data-type="modal" style="display: none;">
  <div class="box-padder">
    <%= form_for :search, @search, :html => {"data-tab" => "filter", :method => :get} do |f| %>
      
      <div class="form-element">
        <%= f.label(:level_1_equals, "Zahlungsleister") %>
        <%= f.collection_select(:level_1_equals, Address.where(:category_id => 8, :purchase_orders => [:id => @purchase_orders.collect(&:id)]).includes(:purchase_orders).order("addresses.company_name ASC"), :id, :location_for_select, {:include_blank => true}, {:class => "xtra-large"}) %>
      </div>
      
      <div class="form-element">
        <%= f.label(:level_2_equals, "Rechnungsempfänger") %>
        <%= f.collection_select(:level_2_equals, Address.where(:category_id => 9, :purchase_orders => [:id => @purchase_orders.collect(&:id)]).includes(:purchase_orders).order("addresses.company_name ASC"), :id, :location_for_select, {:include_blank => true}, {:class => "xtra-large"}) %>
      </div>
      
      <div class="form-element">
        <%= f.label(:level_3_equals, "Lieferadresse") %>
        <%= f.collection_select(:level_3_equals, Address.where(:category_id => 10, :purchase_orders => [:id => @purchase_orders.collect(&:id)]).includes(:purchase_orders).order("addresses.company_name ASC"), :id, :location_for_select, {:include_blank => true}, {:class => "xtra-large"}) %>
      </div>
      
      <div class="form-element">
        <%= f.label(:shipping_route_id_equals, "Tour") %>
        <%= f.collection_select(:shipping_route_id_equals, ShippingRoute.order("name ASC"), :id, :name, {:include_blank => true}, {:class => "xtra-large"}) %>
      </div>
      
      <div class="form-element">
        <%= f.label(:delivery_date_greater_than_or_equal_to, "Von") %>
        <%= f.text_field :delivery_date_greater_than_or_equal_to, :class => "date_picker" %>
      </div>
      
      <div class="form-element">
        <%= f.label(:delivery_date_less_than_or_equal_to, "Bis") %>
        <%= f.text_field :delivery_date_less_than_or_equal_to, :class => "date_picker" %>
      </div>
      
      <div class="form-element">
        <%= f.label(:delivered_equals, "Versendet?") %>
        <%= f.select(:delivered_equals, { 'Nein' => false, 'Ja' => true }, {}) %>
      </div>
      
      <div class="form-element">
        <%= f.label(:warehousing_completed_gteq, "Einlagerung abgeschlossen?") %>
        <%= f.select(:warehousing_completed_gteq, { '>= 20%' => 20.0, '>= 50%' => 50.0, '>= 80%' => 80.0, '100' => 100.0 }, {:include_blank => true}) %>
      </div>
      <div class="form-element">
        <%= f.label(:manufacturing_completed_gteq, "Produktion abgeschlossen?") %>
        <%= f.select(:manufacturing_completed_gteq, { '>= 20%' => 20.0, '>= 50%' => 50.0, '>= 80%' => 80.0, '100' => 100.0 }, {:include_blank => true}) %>
      </div>
      <div class="form-element clearfix">
        <%= f.submit("Filtern", :class => "blueSubmit floatLeft") %>
      </div>
    <% end %>
    
    <%= form_tag(search_for_purchase_orders_path, {:class => "form", "data-tab" => "goto", :method => :get}) do %>
      <div class="form-element">
        <%= label_tag(:purchase_order_id, "VK NR") %>
        <%= text_field_tag(:purchase_order_id, nil, :size => 30) %>
      </div>
      
      <div class="form-element clearfix">
        <%= submit_tag "Go", :disable_with => 'Filterning...', :name => nil, :class => "blueSubmit floatLeft" %>
      </div>
    <% end %>
  </div>
</div>
