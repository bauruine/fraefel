<%= form_for(@customer) do |f| %>

  <p class="formLabel">
    <%= f.label :company %>
  </p>
  <p class="formInput">
    <%= f.text_field :company, :class => "fullWidth" %>
  </p>
  <p class="formLabel">
    <%= f.label :street %>
  </p>
  <p class="formInput">
    <%= f.text_field :street, :class => "fullWidth" %>
  </p>
  <p class="formLabel">
    <%= f.label :zip %>
  </p>
  <p class="formInput">
    <%= f.text_field :zip, :class => "fullWidth" %>
  </p>
  <p class="formLabel">
    <%= f.label :city %>
  </p>
  <p class="formInput">
    <%= f.text_field :city, :class => "fullWidth" %>
  </p>
  <p class="formLabel">
    <%= f.label :country %>
  </p>
  <p class="formInput">
    <%= f.text_field :country, :class => "fullWidth" %>
  </p>
  <p class="formLabel">
    <%= f.label :active %>
  </p>
  <p class="formInput">
    <%= f.select("active", {"Ja" => true, "Nein" => false}, { :include_blank => true }, {:class => "fullWidth"}) %>
  </p>
  <p class="formInput">
    <%= f.submit("Kunde erfassen", :class => "fullWidth") %>
  </p>
<% end %>
