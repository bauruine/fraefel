<section id="price_table">
  <table>
    <thead>
      <tr>
        <th>Menge Coli</th>
        <th></th>
        <th>Pos. Artikel</th>
        <th class="align-center">Stückzahl Total</th>
        <th class="align-right">Warenwert / Euro</th>
      </tr>
    </thead>
    <tbody>
      <% @purchase_positions.group(:commodity_code_id).count.each do |k, v| %>
      <tr>
        <td></td>
        <td></td>
        <td><%= "#{CommodityCode.find(k).code} #{CommodityCode.find(k).content}" %></td>
        <td class="align-center"><%= @purchase_positions.where(:commodity_code_id => k).sum(:quantity) %></td>
        <td class="align-right"><%= PalletPurchasePositionAssignment.where("delivery_rejections.id = ?", @delivery_rejection.id).where("commodity_codes.id = ?", k).includes(:pallet => [:delivery_rejection], :purchase_position => [:commodity_code]).sum(:reduced_price) %></td>
      </tr>
      <% end %>
      <tr>
        <td></td>
        <td></td>
        <td class="bold">Total Stücke</td>
        <td class="align-center border-top bold"><%= @purchase_positions.sum(:quantity) %></td>
        <td class="align-right border-top"></td>
      </tr>
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td>Zwischentotal</td>
        <td class="align-right"><%= PalletPurchasePositionAssignment.where("delivery_rejections.id = ?", @delivery_rejection.id ).includes(:pallet => :delivery_rejection).sum(:reduced_price) %></td>
      </tr>
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td>MwSt 8.00%</td>
        <td class="align-right"><%= ((PalletPurchasePositionAssignment.where("delivery_rejections.id = ?", @delivery_rejection.id ).includes(:pallet => :delivery_rejection).sum(:reduced_price) / 100) * 8).round(2) %></td>
      </tr>
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td>Total</td>
        <td class="align-right"><%= ((PalletPurchasePositionAssignment.where("delivery_rejections.id = ?", @delivery_rejection.id ).includes(:pallet => :delivery_rejection).sum(:reduced_price) / 100) * 8).round(2) + PalletPurchasePositionAssignment.where("delivery_rejections.id = ?", @delivery_rejection.id ).includes(:pallet => :delivery_rejection).sum(:reduced_price) %></td>
      </tr>
      <tr>
        <td></td>
        <td>Total netto kg</td>
        <td><%= PalletPurchasePositionAssignment.where("delivery_rejections.id = ?", @delivery_rejection.id ).includes(:pallet => :delivery_rejection).sum(:weight) %></td>
        <td>&nbsp;</td>
        <td class="align-right">&nbsp;</td>
      </tr>
      <tr>
        <td></td>
        <td class="bold">Total brutto kg</td>
        <td class="bold"><%= PalletPurchasePositionAssignment.where("delivery_rejections.id = ?", @delivery_rejection.id ).includes(:pallet => :delivery_rejection).sum(:weight) + (@delivery_rejection.pallets.sum("count_as", :include => [:pallet_type]) * 20) %></td>
        <td class="bold">Rechnungswert Euro</td>
        <td class="align-right bold"><%= ((PalletPurchasePositionAssignment.where("delivery_rejections.id = ?", @delivery_rejection.id ).includes(:pallet => :delivery_rejection).sum(:reduced_price) / 100) * 8).round(2) + PalletPurchasePositionAssignment.where("delivery_rejections.id = ?", @delivery_rejection.id ).includes(:pallet => :delivery_rejection).sum(:reduced_price) %></td>
      </tr>
    </tbody>
  </table>
</section>


