<ul class="breadcrumb">
  <li>
    <a href="#"><i class="icon-home"></i> Dashboard</a> <span class="divider">/</span>
  </li>
  <li>
    <a href="#"><i class="icon-cog"></i> Verwaltung</a> <span class="divider">/</span>
  </li>
  <li class="active">
    <a href="#"><i class="icon-user"></i> Benutzer</a>
  </li>
</ul>

<div class="page-header">
  <h1>Benutzer Liste</h1>
</div>

<div class="btn-toolbar">
  <div class="btn-group">
    <a class="btn" href="/users/new"><i class="icon-plus-sign"></i> Neuer Benutzer</a>
    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
      <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
      <li><a href="#"><i class="icon-search"></i> Suche</a></li>
      <!-- dropdown menu links -->
    </ul>
  </div>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Benutzer</th>
      <th>Email</th>
      <th>Gruppe/n</th>
      <th>Login anz.</th>
      <th>Letzter login</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to(user.id, edit_user_path(user)) %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.roles.present? ? user.roles.map(&:name).join(", ") : nil %></td>
        <td><%= user.login_count %></td>
        <td><%= user.last_login_at.present? ? user.last_login_at.to_formatted_s(:swiss_date) : nil %></td>
      </tr>
    <% end %>
  </tbody>
</table>