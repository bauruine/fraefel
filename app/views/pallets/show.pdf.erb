<%- model_class = Pallet -%>
<div class="page-header">
  <h1>
    <%=t '.title', :default => model_class.model_name.human %>
    <small>
      <%= @pallet.id %>
    </small>
  </h1>
</div>

<div class="media">
  <%= image_tag("https://chart.googleapis.com/chart?cht=qr&chs=154x154&chl=#{pallet_path(@pallet, :format => :pdf)}", :class => "pull-left") %>
  <div class="media-body">
    <div class="page-header">
      <h1>
        <%=t '.title', :default => model_class.model_name.human %>
        <small>
          <%= @pallet.id %>
        </small>
      </h1>
    </div>
    <dl class="dl-horizontal">
      <dt>Empfänger:</dt>
      <dd><%= @pallet.shipping_address.consignee_full %></dd>
    </dl>
  </div>
</div>

<hr />

<table class="table table-striped table-bordered table-condensed">
  <thead>
  <tr>
    <th>Position</th>
    <th>Artikel Nr</th>
    <th>Artikel</th>
    <th>Lager</th>
    <th>Gebiet</th>
    <th>Versand</th>
    <th>Total</th>
  </tr>
  </thead>
  <tbody>
  <% @pallet.line_items.each do |line_item| %>
  <% purchase_position = line_item.purchase_position %>
      <tr>
        <td class="nowrap">
          <%= purchase_position.baan_id %>
        </td>
        <td><%= purchase_position.article_number %></td>
        <td><%= purchase_position.article %></td>
        <td class="nowrap"><%= purchase_position.storage_location %></td>
        <td class="nowrap"><%= purchase_position.zip_location.title %></td>
        <td class="nowrap"><%= purchase_position.delivery_date.to_date.to_formatted_s(:swiss_date) %></td>
        <td class="nowrap">
          <% if line_item.is_individual_package? %>
            <span class="label label-warning">
              <i class="icon-asterisk"></i> <%= line_item.quantity %>
            </span>
          <% else %>
            <%= line_item.quantity %>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
  <tfoot>
  <tr>
    <td colspan="7">PLZ Gebiet: <strong><%= @pallet.zip_location.title %></td>
  </tr>
  </tfoot>
</table>


<section class="margin_bottom_20px">
  <ul>
    <li class="bold">Kontrolle:</li>
    <li class="margin_top_15px">__________________________________________</li>
  </ul>
</section>

<section class="margin_bottom_20px">
  <ul>
    <li class="bold">Vollständigkeit:</li>
    <li class="margin_top_15px">__________________________________________</li>
  </ul>
</section>

<section class="margin_bottom_20px">
  <ul>
    <li class="bold">Lieferschein:</li>
    <li class="margin_top_15px">__________________________________________</li>
  </ul>
</section>