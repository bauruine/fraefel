<header class="resource_header margin_bottom_big clearfix">
  <h1 class="floatLeft">Neuen Versand erfassen</h1>
  <%= link_to("Abbrechen", :back, :class => "floatRight no_text_decoration blue_link_button m-r_5px") %>
</header>

<section class="filter_box">
  <header class="filter_box_header"><h4>Versand</h4></header>
  <section class="filter_box_content clearfix">
    <%= form_for(@cargo_list) do |f| %>

      <p class="formLabel">
        <%= f.label :pick_up_time_earliest %>
      </p>
      <p class="formInput">
        <%= f.datetime_select :pick_up_time_earliest %>
      </p>
      <p class="formLabel">
        <%= f.label :pick_up_time_latest %>
      </p>
      <p class="formInput">
        <%= f.datetime_select :pick_up_time_latest %>
      </p>
      <p class="formLabel">
        <%= f.label :shipper %>
      </p>
      <p class="formInput">
        <%= f.collection_select(:shipper_id, Shipper.all, :id, :name, {:include_blank => true}) %>
      </p>
      <p class="formLabel">
        <%= f.label :shipper_location %>
      </p>
      <p class="formInput">
        <%= f.collection_select(:shipper_location_id, ShipperLocation.all, :id, :name, {:include_blank => true}) %>
      </p>
      <p class="formLabel">
        <%= f.label :referee, "Kunden Name" %>
      </p>
      <p class="formInput">
        <%= f.text_field :referee, :placeholder => "Pflichtfeld!" %>
      </p>
      <p class="formLabel">
        <%= f.label :zip, "ZIP" %>
      </p>
      <p class="formInput">
        <%= f.text_field :zip %>
      </p>
      <p class="formLabel">
        <%= f.label :city, "Ortschaft" %>
      </p>
      <p class="formInput">
        <%= f.text_field :city %>
      </p>
      <p class="formLabel">
        <%= f.label :country, "Land" %>
      </p>
      <p class="formInput">
        <%= f.select(:country, { 'DE'=>"DE", 'CH'=>"CH" }) %>
      </p>
      
      <p class="formInput">
        <%= f.submit("Papiere erfassen") %>
      </p>

    <% end %>
  </section>
</section>

