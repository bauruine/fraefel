<section class="filter_box">
  <header class="filter_box_header clearfix">
    <h4 class="floatLeft">Filter anwenden</h4>
    <%= link_to("Gehe zu", "#", {"data-type" => "tab", "data-warp" => "goto", :class => "floatRight no_text_decoration link_button"}) %>
    <%= link_to("Filter", "#", {"data-type" => "tab", "data-warp" => "filter", :class => "floatRight no_text_decoration link_button m-r_5px"}) %>
    </header>
  <section class="filter_box_content clearfix">
  <% form_for :search, @search, :html => {"data-tab" => "filter", :method => :get} do |f| %>
    <ul class="ul_summary">
      
      <li class="summary clearfix">
        <p class="floatLeft bold title">Versendet?</p>
        <p class="floatLeft"><%= f.select(:delivered_equals, { 'Ja'=>true, 'Nein'=>false }, :include_blank => true) %></p>
      </li>
      
      <li class="summary clearfix">
        <p class="floatLeft title">Aktionen</p>
        <p class="floatLeft"><%= f.submit "Filtern", :disable_with => 'Filterning...', :name => nil %></p>
      </li>
      
    </ul>
  <% end %>
  <% form_tag(search_for_cargo_lists_path, {:class => "form", "data-tab" => "goto", :method => :get}) do %>
    <ul class="ul_summary">

      <li class="summary clearfix">
        <p class="floatLeft bold title">Versand NR</p>
        <p class="floatLeft"><%= text_field_tag(:cargo_list_id) %></p>
      </li>
      <li class="summary clearfix">
        <p class="floatLeft title">Aktion</p>
        <p class="floatLeft"><%= submit_tag "Go", :disable_with => 'Filterning...', :name => nil %></p>
      </li>
    </ul>
  <% end %>
  </section>
</section>

<header class="resource_header margin_bottom_big clearfix">
  <h1 class="floatLeft">Versand Listen</h1>
  <%= link_to("Papiere erfassen", new_cargo_list_path(), :class => "floatRight no_text_decoration blue_link_button m-r_5px", "data-type" => "modal", "data-modal_width" => 500) %>
</header>

<% if @cargo_lists.present? %>
  <section class="filter_box">
    <header class="filter_box_header"><h4>Versand</h4></header>
    <section class="filter_box_content clearfix">
      <table>
        <thead>
          <tr>
            <th>Versand NR</th>
            <th>Anz. Paletten</th>
            <th>FÃ¼r</th>
            <th>Abholtermin von</th>
            <th>Abholtermin bis</th>
          </tr>
        </thead>
        <tbody>
          <% @cargo_lists.each do |cargo_list| %>
            <tr>
              <td class="align-center"><%= link_to(cargo_list.id, cargo_list_path(cargo_list)) %></td>
              <td class="align-center"><%= cargo_list.pallets.count %></td>
              <td class="align-center"><%= cargo_list.referee.present? ? cargo_list.referee : "Bitte Name eintragen!"%></td>
              <td class="align-center"><%= cargo_list.pick_up_time_earliest.to_formatted_s(:long) %></td>
              <td class="align-center"><%= cargo_list.pick_up_time_latest.to_formatted_s(:long) %></td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        </tfoot>
      </table>
    </section>
  </section>
  
<% else %>
  <div id="flash_notice">Keine Liefer Papiere gefunden...</div>
<% end %>
