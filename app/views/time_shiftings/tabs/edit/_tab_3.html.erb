        <th>Produktlinie</th>
        <th>Artikelgruppe</th>
        <th>Lager Ort</th>
      </tr>
    </thead>
    <tbody>
      <% @purchase_positions.each do |t_s_p_a| %>
        <tr>
          <td><%= t_s_p_a.purchase_position.delivery_date.to_date.to_formatted_s(:swiss_date) %></td>
          <td><%= @purchase_order.first.shipping_route.name %></td>
