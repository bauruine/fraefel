<% content_for :breadcrumb do %>
  <ul class="breadcrumb">
    <li>
      <%= link_to("Import-Wizzard", baan_imports_path) %> <span class="divider">/</span>
    </li>
    <li class="active">New</li>
  </ul>
<% end %>

<div class="page-header">
  <h1>Upload CSV</h1>
</div>

<div class="row-fluid">
  <div class="span3">
    <div class="well well-small">
      <div class="page-header">
        <h4>Information</h4>
      </div>
      <ul>
        <li>Es muss keine Gruppe mehr angegeben werden</li>
      </ul>
      <ul>
        <li><strong>Folgende Dateien werden unterst√ºtzt:</strong></li>
        <ul>
          <li>BaanRead_Versand_Alle.csv</li>
          <li>BaanRead_Versand_Alle_Verrechnet.csv</li>
          <li>BaanRead_Versand_Storniert.csv</li>
        </ul>
      </ul>
    </div>
  </div>
  <div class="span9">
    <%= simple_form_for @baan_import, :html => {:class => "form-horizontal"} do |f| %>
      <fieldset>
        <legend>Erstellen</legend>
        <%= f.input :baan_upload %>
        <%#= f.input :baan_import_group_id, :collection => BaanImportGroup.all, :label_method => :title, :value_method => :id %>
      </fieldset>

      <div class="form-actions">
        <%= link_to("Abbrechen", baan_imports_path, :class => "btn") %>
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
</div>
