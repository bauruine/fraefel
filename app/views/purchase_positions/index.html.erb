<ul class="breadcrumb">
  <li>
    <a href="/"><i class="icon-home"></i> Dashboard</a> <span class="divider">/</span>
  </li>
  <li class="active">
    <a href="/purchase_positions"><i class="icon-folder-open"></i> VK-Positionen</a>
  </li>
</ul>

<div class="page-header">
  <h1>VK-Positionen</h1>
</div>

<% @purchase_orders.each do |purchase_order| %>
  <section class="filter_box">
    <header class="filter_box_header clearfix">
      <h4 class="floatLeft">VK-Auftrag NR#<%= purchase_order.baan_id %></h4>
    </header>
    <section class="filter_box_content clearfix">

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Position</th>
            <th>Zoll</th>
            <th>Artikel NR</th>
            <th>Artikel</th>
            <th>Produktlinie</th>
            <th>Menge</th>
            <th>Lager Ort</th>
            <th>Versand</th>
          </tr>
        </thead>
        <tbody>
          <% purchase_order.purchase_positions.each do |purchase_position| %>
            <% if (purchase_position.weight_single.to_i == 0) or (purchase_position.amount.to_i == 0) %>
              <tr class="yellow_background">
            <% else %>
              <tr>
            <% end %>
              <% if permitted_to? :edit, :purchase_positions %>
                <td><%= link_to("#{purchase_position.purchase_order.baan_id}-#{purchase_position.position}", edit_purchase_position_path(purchase_position), "data-role" => "edit_remote") %></td>
              <% else %>
                <td><%= "#{purchase_position.purchase_order.baan_id}-#{purchase_position.position}" %></td>
              <% end %>
              <td><%= purchase_position.commodity_code.content %></td>
              <td><%= purchase_position.article_number %></td>
              <td><%= purchase_position.article %></td>
              <td><%= purchase_position.product_line %></td>
              <td><%= purchase_position.quantity %></td>
              <td><%= purchase_position.storage_location %></td>
              <td><%= purchase_position.delivery_date.to_date.to_formatted_s(:swiss_date) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </section>
  </section>
<% end %>