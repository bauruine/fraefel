<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "reset" %>
    <%= stylesheet_link_tag "application" %>
    <%= stylesheet_link_tag "jquery_ui" %>
    <%= javascript_include_tag "jquery" %>
    <%= javascript_include_tag "jquery_ui" %>
    <%= javascript_include_tag "jquery.ui.datepicker-de.js" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <section id="pageContainer" class="clearfix">
      <header id="containerHeader" class="clearfix">
        <nav id="applicationNavigation" class="floatLeft">
          <ul class="clearfix">
            <% if current_user %>
              <li><%= link_to("Logout: #{current_user.username}", logout_path) %></li>
              <% if permitted_to? :index, :microsoft_databases %>
                <li><%= link_to("Datenbanken", microsoft_databases_path) %></li>
              <% end %>
              <li><%= link_to("VK-AuftrÃ¤ge", purchase_orders_path) %></li>
              <li><%= link_to("VK-Position Liste", purchase_positions_path) %></li>
              <li><%= link_to("Versandlisten", cargo_lists_path) %></li>
              <li><%= link_to("Paletten Liste", pallets_path) %></li>
            <% else %>
              <li><%= link_to("Login", login_path) %></li>
            <% end %>
          </ul>
        </nav>
        <%= image_tag("logo.gif", :class => "floatRight", :id => "logo") %>
      </header>
      <section id="yieldContent">
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <% end %>
        <%= content_tag :h1, yield(:title) if show_title? %>
        <%= yield %>
      </section>
    </section>
  </body>
</html>
