<div class="container-fluid">

  <div class="row-fluid">
  
    <div class="span10">
      <%= yield :breadcrumb %>
    </div>
    <div class="span2">
      <%= image_tag(asset_path("logo.gif"), :class => "pull-right", :id => "logo") %>
    </div>
    
  </div>
  
  <div class="row-fluid">
    <div class="span12">
      <% if current_user %>
      
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :class => "alert alert-#{name}" %>
        <% end %>
      <% end %>
              
      <%= yield %>
    </div>
  </div>
  
</div>
