<!DOCTYPE html>
<html>
  <head>
    <title>Fraefel AG</title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body>
    <section id="pageContainer" class="clearfix">
      <header id="containerHeader" class="clearfix">
        <nav id="applicationNavigation" class="floatLeft">
          <ul id="utopian-navigation" class="horizontal white">
            <% if current_user %>
              
              <li><%= link_to("Logout: #{current_user.username}", logout_path) %></li>
              
              <% if permitted_to? :index, :microsoft_databases %>
                <li><%= link_to("Datenbanken", microsoft_databases_path) %></li>
              <% end %>
              
              <li><%= link_to("Dashboard", dashboard_path()) %></li>
              
              <% if permitted_to? :index, :purchase_orders %>
                <li class="dropdown">
                  <%= link_to("Versand", purchase_orders_path) %>
                  <ul>
                    <% if permitted_to? :index, :purchase_orders %>
                      <li><%= link_to("VK-AuftrÃ¤ge", purchase_orders_path) %></li>
                    <% end %>
                    <% if permitted_to? :index, :purchase_positions %>
                      <li><%= link_to("VK-Position Liste", purchase_positions_path) %></li>
                    <% end %>
                    <% if permitted_to? :index, :pallets %>
                      <li><%= link_to("Paletten Liste", pallets_path) %></li>
                    <% end %>
                    <% if permitted_to? :index, :cargo_lists %>
                      <li><%= link_to("Versandlisten", cargo_lists_path) %></li>
                    <% end %>
                    <% if permitted_to? :index, :delivery_rejections %>
                      <li><%= link_to("Konflikte", delivery_rejections_path) %></li>
                    <% end %>
                  </ul>
                </li>
              <% end %>
              
              <% if permitted_to? :index, :articles %>
                <li><%= link_to("Inventar", articles_path) %></li>
              <% end %>
              
              <% if permitted_to? :import, :baan_imports %>
                <li><%= link_to("Import-Wizzard", baan_imports_path) %></li>
              <% end %>
              
              <% if permitted_to? :index, :users %>
                <li class="dropdown">
                  <%= link_to("Verwaltung", users_path) %>
                  <ul>
                    <li><%= link_to("Benutzer", users_path) %></li>
                    <li><%= link_to("Kategorie", categories_path) %></li>
                    <li><%= link_to("Status", statuses_path) %></li>
                  </ul>
                </li>
              <% end %>
              
              
            <% else %>
              <li><%= link_to("Login", login_path) %></li>
            <% end %>
          </ul>
        </nav>
        <%= image_tag("logo.gif", :class => "floatRight", :id => "logo") %>
      </header>
      <section id="yieldContent">
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <% end %>
        <%= content_tag :h1, yield(:title) if show_title? %>
        <%= yield %>
      </section>
    </section>
  </body>
</html>
