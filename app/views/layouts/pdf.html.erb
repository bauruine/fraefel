<!DOCTYPE html>
<html>
  <head>
    <%= wicked_pdf_stylesheet_link_tag "reset" %>
    <% unless params[:pdf_type] == "invoice" or params[:pdf_type] == "delivery_receipt" or params[:pdf_type] == "pick_up_receipt" or params[:pdf_type] == "invoice_beta" %>
      <%= wicked_pdf_stylesheet_link_tag "report" %>
    <% else %>
      <%= wicked_pdf_stylesheet_link_tag "pdf" %>
    <% end %>
    <%= wicked_pdf_javascript_include_tag "jquery.js" %>
  </head>
  <body>
    <%= yield %>
  </body>
</html>
