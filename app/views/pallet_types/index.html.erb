<% content_for :breadcrumb do %>
  <ul class="breadcrumb">
    <li class="active">Paletten Typ</li>
  </ul>
<% end %>

<div class="page-header">
    <h1 class="pull-left">Paletten Typ</h1>
    <div class="btn-toolbar pull-right">
    
      <div class="btn-group">
        <a class="btn btn-primary" href="<%= new_pallet_type_path() %>">Neuer Paletten Typ</a>
      </div>
      
    </div>
    <div class="clear"></div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <td></td>
      <td>Paletten Typ</td>
      <td>Grösse</td>
      <td>Zählen als</td>
    </tr>
  <thead>
  <tbody>
    <% @pallet_types.each do |pallet_type| %>
      <tr>
        <td><%= link_to pallet_type.id, edit_pallet_type_path(pallet_type) %></td>
        <td><%= pallet_type.read_as %></td>
        <td><%= pallet_type.description %></td>
        <td><%= pallet_type.count_as %></td>
      </tr>
    <% end %>
  </tbody>
</table>
