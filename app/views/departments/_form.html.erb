<%= simple_form_for @department, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <%= f.input :title, :label => "Name der Abteilung" %>
    <%= f.input :abbreviation, :label => "Kürzel" %>
    <%= f.association :shifting_reasons, :as => :check_boxes, :label => "Verwendbare Verschiebungsgründe" %>

    <div class="form-actions">
      <%= f.submit "Speichern", :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', departments_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>


