<% content_for :breadcrumb do %>
  <ul class="breadcrumb">
    <li class="active">Abteilungen</li>
  </ul>
<% end %>

<div class="page-header">
    <h1 class="pull-left">Abteilungen</h1>
    <div class="btn-toolbar pull-right">
    
      <div class="btn-group">
        <a class="btn btn-primary" href="<%= new_department_path() %>">Neue Abteilung</a>
      </div>
      
    </div>
    <div class="clear"></div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Abteilung</th>
      <th></th>
      <th>anz. MA.</th>
      <th>Erstellt durch</th>
      <th>Erstellt am</th>
    </tr>
  </thead>
  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= link_to(department.id, edit_department_path(department)) %></td>
        <td><%= department.title %></td>
        <td><%= department.abbreviation %></td>
        <td><%= department.users.count %></td>
        <td><%= department.created_by %></td>
        <td><%= department.created_at.to_formatted_s(:swiss_date) %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
  </tfoot>
</table>
